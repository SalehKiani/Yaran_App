<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MenuApp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:rowCount="4"
            android:columnCount="3">

            <RelativeLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1.3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnSpan="3"
                android:background="@android:color/holo_green_light"
                android:layout_row="0"
                android:layout_column="0"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>

            <GridLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/holo_purple"
                android:layout_row="1"
                android:layout_column="0"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"
                >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/wallet_pic"
                    android:background="@android:color/holo_purple"
                    android:src="@drawable/wallet"
                    android:scaleType="fitCenter"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="wallet_click"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="کیف پول"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>

            </GridLayout>

            <GridLayout

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/holo_blue_light"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="news_Click"
                android:id="@+id/news_GL"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"

                >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/news_pic"
                    android:background="@android:color/holo_blue_light"
                    android:src="@drawable/newspaper"
                    android:scaleType="fitCenter"
                    android:onClick="news_Click"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="اخبار"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/news_TV"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:onClick="news_Click"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    />
            </GridLayout>

            <GridLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/holo_red_light"
                android:layout_row="3"
                android:layout_column="0"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"
                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/holo_red_light"
                    android:src="@drawable/teach"
                    android:id="@+id/teach_pic"
                    android:scaleType="fitCenter"
                    android:columnCount="1"
                    android:rowCount="2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="آموزش"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
            </GridLayout>




            <GridLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/holo_green_light"
                android:layout_row="1"
                android:layout_column="1"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"

                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/employee_pic"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/man"
                    android:scaleType="fitCenter"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="کار یابی "
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
            </GridLayout>


            <GridLayout
                android:layout_columnWeight="1.25"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/holo_orange_light"
                android:layout_row="1"
                android:layout_column="2"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"

                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/legation_pic"
                    android:background="@android:color/holo_orange_light"
                    android:src="@drawable/legation"
                    android:scaleType="fitCenter"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"



                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="سفارت"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
            </GridLayout>


            <GridLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:layout_row="3"
                android:layout_column="1"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"
                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@android:color/white"
                    android:src="@drawable/pastime"
                    android:scaleType="fitCenter"
                    android:id="@+id/pastime_pic"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"


                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="سرگرمی"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
            </GridLayout>




            <GridLayout
                android:layout_columnWeight="1.25"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowSpan="2"
                android:background="@android:color/darker_gray"
                android:layout_row="2"
                android:layout_column="2"
                android:columnCount="1"
                android:rowCount="2"
                android:padding="15dp"
                >
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/tourist_pic"
                    android:background="@android:color/darker_gray"
                    android:src="@drawable/tourism"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="5"
                    android:layout_columnWeight="1"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="گردشگری"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
            </GridLayout>


        </GridLayout>

    </RelativeLayout>



</ScrollView>