<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_phone"
    android:background="@color/Light"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/back_login"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="41dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:textColor="@color/Light"
                android:text="ورود به حساب کاربری"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/titel"/>



            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="190dp"
                android:background="@drawable/border_light"

                >


                <android.support.design.widget.TextInputLayout
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:textColorHint="@color/Light"
                    android:drawableTint="@color/Light"
                    android:foregroundTint="@color/Light"
                    android:layout_marginLeft="15dp"
                    >

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="کشور"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:id="@+id/country_ET"
                        android:layout_gravity="center"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@color/Light"
                        android:textColor="@color/Light"
                        android:drawableTint="@color/Light"
                        android:foregroundTint="@color/Light"
                        android:maxLines="1"
                        android:maxWidth="200dp"



                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColorHint="@color/Light"
                    android:drawableTint="@color/Light"
                    android:foregroundTint="@color/Light"
                    android:layout_marginLeft="15dp"

                    android:background="@drawable/edittext"
                    android:layout_marginTop="50dp"
                    >


                    <EditText
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="کد"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:id="@+id/codecountry_ET"
                        android:layout_gravity="center"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@color/Light"
                        android:textColor="@color/Light"
                        android:drawableTint="@color/Light"
                        android:foregroundTint="@color/Light"
                        android:maxLength="4"
                        android:maxWidth="45dp"



                        />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="65dp"
                    android:textColorHint="@color/Light"
                    android:id="@+id/phone_ETRL"
                    android:drawableTint="@color/Light"
                    android:foregroundTint="@color/Light"
                    android:background="@drawable/edittext"
                    >

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="شماره تلفن همراه"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:cursorVisible="true"
                        android:id="@+id/phone_ET"
                        android:textCursorDrawable="@color/Light"
                        android:textColor="@color/Light"
                        android:drawableTint="@color/Light"
                        android:foregroundTint="@color/Light"
                        android:maxLength="19"
                        android:maxWidth="200dp"




                        />
                    <requestFocus/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:background="@drawable/corner8"
                    android:text="دریافت کد ورود"
                    android:textColor="@color/Dark"
                    android:id="@+id/code_BTN"
                    android:onClick="code_Click"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/phone_ETRL"
                    android:layout_marginTop="15dp"
                    />


                <Button
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border"
                    android:text="رد کردن"
                    android:textColor="@color/Light"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/code_BTN"
                    android:id="@+id/menu_BTN"
                    android:onClick="menu_Click"
                    android:layout_marginTop="5dp"

                    />

            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>



